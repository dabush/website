/***
 * Returns an array of fields for the vm text node
 */
function vm_get_node_fields() {
    return field_info_instances('node', VM_NODE_TYPE);
}

function vm_admin_form() {
    $form = array();
    $variables = array('title');
    $form['title'] = array(
        '#type' => 'textfield',
        '#title' => t('XPath query for Title'),
        '#default_value' => variable_get('vm_xpath_title', '//teiHeader/fileDesc/titleStmt/title'),
        '#size' => 50,
    );
    foreach (vm_get_node_fields() as $name => $attributes) {
        $form[$name] = array(
            '#type' => 'textfield',
            '#title' => t('XPath query for ' . $attributes['label']),
            '#default_value' => variable_get('vm_xpath_' . $name, ''),
            '#size' => 50,
        );
        array_push($variables, $name);
    }
    variable_set('vm_xpath_items', $variables);
    return system_settings_form($form);
}

function vm_form_upload_tei_form($form, &$form_state) {
    $form['tei_file'] = array(
        '#type' => 'managed_file',
        '#title' => t('Upload TEI file'),
        '#description' => t("Upload a TEI-encoded XML file for use in Versioning Machine"),
        '#upload_validators' => array(
            'file_validate_extensions' => array('xml'),
            'file_validate_size' => array(10 * 1024 * 1024),
        ),
        '#upload_location' => "public://vm_tei",
        '#required' => TRUE,
    );

    $form['submit'] = array(
        '#type' => 'submit',
        '#value' => 'Submit'
    );

    return $form;
}

/***
 * @param $form
 * @param $form_state
 *
 * Parse the TEI to extract field data; create a node with this data
 */
function vm_form_upload_tei_form_submit($form, &$form_state) {
    global $user;
    $file = file_load($form_state['values']['tei_file']);
    $filename = drupal_realpath($file->uri);
    $xml = new DOMDocument;
    $xml->load($filename);
    $xpath = new DOMXPath($xml);

    // Get xpath queries from the admin form settings
    $items = variable_get('vm_xpath_items');
    dpm($items);
    $values = array();
    foreach ($items as $item) {
        $query = variable_get($item);
        if (strlen($query)) {
            $result = $xpath->query($query);
            $values[$item] = $result[0]->nodeValue;
        }
    }
    dpm($values);

    // We need a title for our nodes
    if (array_key_exists('title', $values)) {
        $file->status = FILE_STATUS_PERMANENT;
        file_save($file);
        $node = entity_create('node', array(
            'type' => VM_NODE_TYPE,
            'uid' => $user->uid,
            'status' => 1,
            'comment' => 0,
            'promote' => 0
        ));
        $wrapper = entity_metadata_wrapper('node', $node);
        foreach ($values as $key => $val) {
            $wrapper->{$key}->set($val);
        }
        $wrapper->field_tei_file->file->set($file); // Save the filename

        // Now run the XSLT and save the location
        $vm_file = vm_convert($filename);
        $wrapper->field_vm_link->set(array('url' => $vm_file));
        $wrapper->save();
    }
}

/***
 * Converts uploaded TEI to HTML using Versioning Machine's XSLT
 ***/
function vm_convert($xml_filename) {
    $xml = new DOMDocument;
    $xml->load($xml_filename);

    $xsl = new DOMDocument;
    // Note: fragile; requires VersioningMachine to be in the right place
    // TODO: Fix so it's not all hard-coded like this
    $vm_path = drupal_get_path('module', 'vm') . '/VersioningMachine';
    $xsl->load($vm_path . '/src/vmachine.xsl');

    // Configure the transformer
    $proc = new XSLTProcessor;
    $proc->importStyleSheet($xsl); // attach the xsl rules
    $basename = basename($xml_filename, '.xml');
    // More hard-coding. Yuck, but I'm in a hurry. Sorry.
    $outfile = $vm_path . '/texts/' . $basename . '.html';
    // TODO: filter out special characters
    $output = $proc->transformToXML($xml);
    file_unmanaged_save_data($output, $outfile);
    return $outfile;
}

